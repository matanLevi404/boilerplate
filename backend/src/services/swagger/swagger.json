{
  "openapi": "3.1.0",
  "info": {
    "title": "Bank Backend: REST API Docs",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "components": {
    "securitySchemas": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "jwt"
      }
    }
  },
  "paths": {
    "/healthcheck": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "Health Check",
        "description": "Check the health status of the API",
        "responses": {
          "200": {
            "description": "API is healthy"
          }
        }
      }
    },
    "/api/users/getUsersById/{userId}": {
      "get": {
        "summary": "Get Users By Id",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "query",
            "name": "id",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "query",
            "name": "name",
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": null,
        "responses": {
          "200": {
            "description": "Get Users By Id"
          },
          "400": {
            "description": "Bad request: failed to Get Users By Id"
          }
        }
      }
    },
    "/api/users/addUser/{id}": {
      "post": {
        "summary": "Add User",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": [
                "number",
                "string"
              ]
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": [
                      "string",
                      "number"
                    ]
                  },
                  "email": {
                    "type": "string"
                  },
                  "extra": {
                    "type": "object",
                    "properties": {
                      "details": {
                        "type": "boolean"
                      },
                      "indet": {
                        "type": "object",
                        "properties": {
                          "done": {
                            "type": "null"
                          }
                        },
                        "required": [
                          "done"
                        ],
                        "additionalProperties": false
                      }
                    },
                    "required": [
                      "details",
                      "indet"
                    ],
                    "additionalProperties": false
                  }
                },
                "required": [
                  "username",
                  "email",
                  "extra"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Add User"
          },
          "400": {
            "description": "Bad request: failed to Add User"
          }
        }
      }
    },
    "/api/users/updateUserById": {
      "put": {
        "summary": "Update User By Id",
        "tags": [
          "users"
        ],
        "parameters": [],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "number"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "required": [
                  "username",
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update User By Id"
          },
          "400": {
            "description": "Bad request: failed to Update User By Id"
          }
        }
      }
    },
    "/api/users/{userId}/deleteUserById/{id}": {
      "delete": {
        "summary": "Delete User By Id",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": null,
        "responses": {
          "200": {
            "description": "Delete User By Id"
          },
          "400": {
            "description": "Bad request: failed to Delete User By Id"
          }
        }
      }
    }
  }
}